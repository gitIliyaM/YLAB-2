<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="03-create-products-table" author="developer">
        <createTable tableName="products" schemaName="app_schema">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('app_schema.product_id_seq'::regclass)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)"/>
            <column name="brand" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="03-create-audit-log-table" author="developer">
        <createTable tableName="audit_log" schemaName="app_schema">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('app_schema.audit_log_id_seq'::regclass)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="TEXT"/>
            <column name="timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>